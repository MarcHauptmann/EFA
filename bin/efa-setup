#!/usr/bin/perl

use EFA::DB;

use strict;
use warnings;

my $file = $ARGV[0] || $ENV{HOME}."/.efa";

init_db( url => "dbi:SQLite:dbname=$file" );
reset_db_schema();
close_db();

print "Lokale Datenbank wurde in $file angelegt";

__END__

=encoding utf8

=head1 NAME

B<efa-setup> - Initialisiert die lokale Datenbank in I<~/.efa>

=head1 SYNOPSIS

=over 8

=item I<efa-setup>

=back
